<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_book_page_upload_button"
            android:background="@color/green"
            android:textColor="@color/white"
            style="@style/TitleTextStyle"
            android:padding="@dimen/default_margin"/>

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/trending4"/>

    </LinearLayout>

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/default_margin"
        style="@style/DefaultTextStyle"
        android:hint="@string/add_book_page_name_input"/>

    <EditText
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/default_margin"
        style="@style/DefaultTextStyle"
        android:hint="@string/add_book_page_author_input"/>

    <Spinner
        android:id="@+id/genres_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/default_margin"
        android:entries="@array/add_book_page_genres_spinner_input"/>

    <Spinner
        android:id="@+id/difficulty_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/default_margin"
        android:entries="@array/add_book_page_difficulty_spinner_input"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@color/green"
        android:text="@string/add_book_page_confirm_button"
        android:textSize="24dp"
        android:textColor="@color/white"/>

</LinearLayout>